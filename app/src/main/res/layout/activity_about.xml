<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_glass_light">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_glass_primary"
        android:paddingBottom="18dp">

        <!-- 顶部工具栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@android:color/white"
            app:title=""
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- 应用信息卡片（渐变描边） -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_border_gradient"
                android:padding="1dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="24dp">
                    <!-- 蓝色“关于”标题 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关于"
                        android:textColor="@color/blue_glass_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingBottom="12dp" />

                    <!-- 应用图标 -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="4dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="App Icon" />

                    <!-- 应用名称 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Phone Agent"
                        android:textColor="@color/blue_glass_text"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- 版本号 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="版本: 1.0.0"
                        android:textColor="@color/blue_glass_icon"
                        android:textSize="14sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- 功能列表卡片（渐变描边） -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_border_gradient"
                android:padding="1dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">

                    <!-- 检查更新按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:minHeight="52dp"
                        android:background="@drawable/ripple_btn_check_update"
                        android:backgroundTint="@null"
                        android:text="检查更新"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_glass_primary_variant"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_update"
                        app:iconTint="@color/blue_glass_primary_variant"
                        app:iconGravity="textStart"
                        app:backgroundTint="@null"
                        android:elevation="4dp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- 更新日志 -->
                    <LinearLayout
                        android:id="@+id/itemChangelog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/about_icon_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_history_24"
                            app:tint="@color/blue_glass_primary"
                            android:contentDescription="更新日志" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="更新日志"
                            android:textColor="@color/blue_glass_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/blue_glass_icon"
                            android:contentDescription="进入" />

                    </LinearLayout>

                    <!-- 开源许可声明 -->
                    <LinearLayout
                        android:id="@+id/itemLicenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/about_icon_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_license"
                            app:tint="@color/blue_glass_primary"
                            android:contentDescription="开源许可" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="开源许可声明"
                            android:textColor="@color/blue_glass_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/blue_glass_icon"
                            android:contentDescription="进入" />

                    </LinearLayout>

                </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- 联系信息卡片（渐变描边） -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card_border_gradient"
                android:padding="1dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">

                    <!-- 联系方式 -->
                    <LinearLayout
                        android:id="@+id/itemContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/about_icon_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/blue_glass_primary"
                            android:contentDescription="联系方式" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系方式"
                                android:textColor="@color/blue_glass_text"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="联系我们: jack666_2007@foxmail.com"
                                android:textColor="@color/blue_glass_icon"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 开发者 -->
                    <LinearLayout
                        android:id="@+id/itemDeveloper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/about_icon_bg"
                            android:padding="8dp"
                            android:src="@drawable/ic_developer"
                            app:tint="@color/blue_glass_primary"
                            android:contentDescription="开发者" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开发者"
                                android:textColor="@color/blue_glass_text"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="开发者: ZG0704666"
                                android:textColor="@color/blue_glass_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- 版权声明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="© 2025-2026 Phone Agent. 保留所有权利。"
                android:textColor="@color/blue_glass_icon"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
