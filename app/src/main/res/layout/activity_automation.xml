<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/blue_glass_primary"
            app:title="Aries AI自动化控制台"
            app:titleCentered="true"
            app:titleTextColor="@color/blue_glass_primary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/page_padding"
            android:paddingVertical="@dimen/spacing_md">

            <!-- 核心状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0F2FE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_padding_small">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/bg_circle_red" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="系统状态"
                            android:textAllCaps="true"
                            android:textColor="@color/blue_glass_icon"
                            android:textSize="10sp"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tvAccStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="无障碍服务：未启用"
                            android:textColor="@color/blue_glass_text"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenAccessibility"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去开启"
                        android:textColor="@color/blue_glass_primary"
                        app:rippleColor="#202563EB" />

                    <ImageButton
                        android:id="@+id/btnRefreshAccessibility"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_refresh_24"
                        app:tint="@color/blue_glass_icon" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 任务指令区 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0F2FE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务指令确认"
                        android:textAllCaps="true"
                        android:textColor="@color/blue_glass_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:background="@drawable/bg_rounded_input_light"
                        android:padding="4dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/btnVoiceTask"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="在此输入或录入您的任务指令..."
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="6"
                            android:padding="12dp"
                            android:textColor="@color/blue_glass_text"
                            android:textColorHint="#94A3B8"
                            android:textSize="15sp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnVoiceTask"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="4dp"
                            app:cardBackgroundColor="@color/blue_glass_primary"
                            app:cardCornerRadius="26dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_mic_24"
                                app:tint="@android:color/white" />
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>

                    <!-- 动态任务建议 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:background="@drawable/bg_recommend_gradient"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/tvRecommendTask"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_recommend_inner"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="@dimen/spacing_sm"
                            android:text="点击尝试：'查看当前电池状态'"
                            android:textColor="@color/blue_glass_primary"
                            android:textSize="13sp"
                            android:fontStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 操作面板 -->
            <LinearLayout
                android:id="@+id/layoutControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPauseAgent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="暂停"
                    android:textColor="@color/blue_glass_primary"
                    android:textSize="14sp"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_pause_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/blue_glass_primary"
                    app:strokeColor="#BAE6FD"
                    app:strokeWidth="1.5dp"
                    app:rippleColor="#102563EB" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartAgent"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1.2"
                    android:text="立即开始"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/blue_glass_primary"
                    app:cornerRadius="24dp"
                    app:elevation="0dp"
                    app:rippleColor="#20FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopAgent"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="停止"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/spacing_sm"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_stop_24"
                    app:iconGravity="textStart"
                    app:iconTint="#EF4444"
                    app:strokeColor="#FEE2E2"
                    app:strokeWidth="1.5dp"
                    app:rippleColor="#10EF4444" />
            </LinearLayout>

            <!-- 日志终端 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="#0F172A"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="#1E293B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_circle_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="monospace"
                            android:text="运行日志系统"
                            android:textColor="#38BDF8"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="#2038BDF8" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="6dp"
                        android:text="系统已就绪，等待指令输入..."
                        android:textColor="#F1F5F9"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
