<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneAgent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_glass_primary</item>
        <item name="colorPrimaryVariant">@color/blue_glass_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_glass_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- 透明跳板页面，用于无感启动目标应用 -->
    <style name="Theme.TransparentLaunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- 蓝色玻璃风格对话框 -->
    <style name="BlueGlassAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_glass_primary</item>
        <item name="colorOnSurface">@color/blue_glass_text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/BlueGlassDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BlueGlassDialogBody</item>
        <item name="buttonBarPositiveButtonStyle">@style/BlueGlassDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/BlueGlassDialogButton</item>
        <item name="shapeAppearanceOverlay">@style/BlueGlassDialogShape</item>
    </style>

    <style name="BlueGlassDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/blue_glass_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueGlassDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/blue_glass_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlueGlassDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_glass_primary</item>
    </style>

    <style name="BlueGlassDialogShape" parent="">
        <item name="cornerSize">16dp</item>
    </style>
</resources>