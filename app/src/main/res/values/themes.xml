<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===========================================
         Base Application Theme - 基础应用主题
         =========================================== -->
    <style name="Theme.Aries" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_glass_primary</item>
        <item name="colorPrimaryVariant">@color/blue_glass_primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_glass_primary</item>
        <item name="colorSecondaryVariant">@color/blue_glass_primary_variant</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Window settings -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Aries.Card.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Aries.Card.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Aries.Card.Large</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Aries.Display.Large</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Aries.Display.Medium</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Aries.Display.Small</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Aries.Headline.Large</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Aries.Headline.Medium</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Aries.Headline.Small</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Aries.Body.Large</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Aries.Body.Medium</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Aries.Caption</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.Aries.Card</item>
        <item name="materialButtonStyle">@style/Widget.Aries.Button</item>
        <item name="textInputStyle">@style/Widget.Aries.TextInput</item>
    </style>

    <!-- ===========================================
         Main Application Theme - 主应用主题
         =========================================== -->
    <style name="Theme.Aries.App" parent="Theme.Aries">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- ===========================================
         Transparent Launch Theme - 透明启动页
         =========================================== -->
    <style name="Theme.Aries.TransparentLaunch" parent="Theme.Aries">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- ===========================================
         Component Styles - 组件样式
         =========================================== -->

    <!-- Base Button Style -->
    <style name="Widget.Aries.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Label.Medium</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- FAB Shape Appearance -->
    <style name="ShapeAppearance.Aries.FAB" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Aries.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/shape_corner_large</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.Aries.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Label.Medium</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Widget.Aries.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Label.Medium</item>
        <item name="android:textColor">@color/blue_glass_primary</item>
        <item name="strokeColor">@color/blue_glass_primary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.Aries.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Label.Medium</item>
        <item name="android:textColor">@color/blue_glass_primary</item>
        <item name="rippleColor">@color/blue_glass_ripple</item>
    </style>

    <!-- Icon Button Style -->
    <style name="Widget.Aries.Button.Icon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="android:minHeight">@dimen/icon_button_size</item>
        <item name="iconSize">@dimen/icon_size_md</item>
        <item name="iconTint">@color/blue_glass_primary</item>
        <item name="rippleColor">@color/blue_glass_ripple</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.Aries.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/blue_glass_primary</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Aries.FAB</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- TextInput Style -->
    <style name="Widget.Aries.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="boxStrokeColor">@color/input_stroke_focused</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- ===========================================
         Dialog Styles - 对话框样式
         =========================================== -->
    <style name="Theme.Aries.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_glass_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Aries.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Aries.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Aries.Dialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Aries.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Aries.Button.Text</item>
    </style>

    <style name="TextAppearance.Aries.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Headline.Small</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Aries.Dialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/TextAppearance.Aries.Body.Medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Legacy Dialog Styles (Backward Compatibility) -->
    <style name="BlueGlassAlertDialog" parent="Theme.Aries.Dialog" />

    <style name="BlueGlassDialogTitle" parent="TextAppearance.Aries.Dialog.Title" />

    <style name="BlueGlassDialogBody" parent="TextAppearance.Aries.Dialog.Body" />

    <style name="BlueGlassDialogButton" parent="Widget.Aries.Button.Text" />

    <style name="BlueGlassDialogShape" parent="ShapeAppearance.Aries.Dialog" />

    <!-- ===========================================
         Bottom Sheet Style - 底部弹窗样式
         =========================================== -->
    <style name="Theme.Aries.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Aries.BottomSheet</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="Theme.Aries.BottomSheet" />

    <style name="Widget.Aries.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Aries.BottomSheet</item>
        <item name="backgroundTint">@color/surface</item>
        <item name="elevation">16dp</item>
    </style>

    <!-- ===========================================
         Toolbar Styles - 工具栏样式
         =========================================== -->
    <style name="Widget.Aries.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/TextAppearance.Aries.Headline.Medium</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>

    <!-- ===========================================
         Legacy Theme Names (Backward Compatibility)
         =========================================== -->
    <style name="Theme.PhoneAgent" parent="Theme.Aries.App">
        <!-- Legacy name for compatibility -->
    </style>

    <style name="Theme.TransparentLaunch" parent="Theme.Aries.TransparentLaunch">
        <!-- Legacy name for compatibility -->
    </style>

</resources>
