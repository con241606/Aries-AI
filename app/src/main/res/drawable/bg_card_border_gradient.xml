<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 外层：渐变边框（用渐变填充 + 内层 inset 来模拟渐变描边） -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="315"
                android:startColor="#66B6E6FF"
                android:endColor="#3383CFFF" />
        </shape>
    </item>

    <!-- 内层：卡片内容底色 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
